{
  "Name": "cleanrecipe",
  "Description": "Clean and format raw dataset",
  "Steps": [
    {
      "Action": {
        "Operation": "REMOVE_DUPLICATES",
        "Parameters": {
          "subsetColumns": "[\"id\"]"
        }
      }
    },
    {
      "Action": {
        "Operation": "DROP_NULLS",
        "Parameters": {
          "subsetColumns": "[\"email\"]"
        }
      }
    },
    {
      "Action": {
        "Operation": "TRIM_WHITESPACE",
        "Parameters": {
          "sourceColumns": "[\"name\"]"
        }
      }
    },
    {
      "Action": {
        "Operation": "PROPER",
        "Parameters": {
          "sourceColumns": "[\"name\"]"
        }
      }
    },
    {
      "Action": {
        "Operation": "CAST_COLUMN_TYPE",
        "Parameters": {
          "sourceColumns": "[\"timestamp\"]",
          "targetColumnType": "DATETIME",
          "format": "yyyy-MM-dd'T'HH:mm:ss"
        }
      }
    }
  ]
}
